<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Activation"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
       android:paddingRight="139dp"
        android:paddingVertical="18dp"
        android:background="#C4C4C4"
        android:gravity="center"
        />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_vector__10_"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 September,2020"
            android:textColor="@color/black"
            android:layout_marginTop="26dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv1"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status : expired"
            android:textColor="@android:color/holo_red_dark"
            android:layout_below="@id/tv2"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/Iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector__11_"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="169dp"
            />
<TextView
    android:id="@+id/tv4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:layout_marginTop="238dp"
    android:text="Nexus 5 Insurance"
    android:textSize="18sp"
    android:layout_centerHorizontal="true"
    />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activate Insutance now"
            android:layout_below="@id/tv4"
            android:layout_marginTop="20dp"
           android:paddingVertical="14dp"
            android:paddingHorizontal="51dp"
            android:layout_marginLeft="39dp"
            android:backgroundTint="#18F148"
            
            />
        
        <TextView
            android:id="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#C4C4C4"
            android:text="All drops including package break"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingVertical="27dp"
            android:paddingLeft="28dp"
/>
<TextView
    android:id="@+id/tv7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/tv6"
    android:text="Coverage"
    android:textColor="@color/black"
    android:textStyle="bold"

    />
<View
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:layout_above="@id/tv7"
    android:background="#C4C4C4"
    
    />
<TextView
    android:id="@+id/tv8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Device:"
    android:layout_above="@id/tv7"
    android:layout_marginBottom="100dp"
    android:layout_marginLeft="10dp"
    android:textColor="@color/white"
    android:textSize="16dp"
/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insurance term:"
            android:layout_above="@id/tv7"
            android:layout_marginBottom="55dp"

            android:textColor="@color/white"
            android:textSize="16dp"
            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="LG Nexus 5"
    android:layout_toEndOf="@id/tv8"
    android:textColor="@color/white"
    android:layout_marginLeft="250dp"
    android:layout_marginTop="520dp"
    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 months"
            android:layout_toEndOf="@id/tv8"
            android:textColor="@color/white"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="560dp"
            />
    </RelativeLayout>
</LinearLayout>